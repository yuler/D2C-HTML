
@import './_varaibles.styl'

body{
box-sizing:border-box;
-moz-box-sizing:border-box; /* Firefox */
-webkit-box-sizing:border-box; /* Safari */
background: $backgroundColor;
}


.content{
	width:100%;
	height: 700px;
}


/***---搜索--*/
.content .search {
	width: 100%;
	height: 45px;
	background: $boxColor;
	position: relative;

}
.content .search .search-input{
	height: 45px;
	width: 248px;
	margin: 0 auto;
	line-height: 45px;
	position: relative;
}
.content .search .search-input input{
	height:32px;
	width: 100%;
	margin-top: 7px;
	border:2px solid #d4d4d4;
	background-color: #ffffff;
	font-size: $defaultFz;
}

s{
	width: 18px;
	height: 18px;
	display: block;
	background: url(./i/search.png);
	background-size: 18px 18px;
	vertical-align: middle;
	position: absolute;
	right: 10px;
	top: 13.5px;
}
/***---搜索结束--*/

/**==藏品列表=**/
ul{
	margin: 0;
	padding: 0;
}
.cp-list{
	width: 100%;
	margin-top: 12px;
}

.cp-list ul{
	list-style: none;
	width: 300px;
	margin: 0 auto;
}

.cp-list li{
	display: block;
	height: 93px;
	width: 300px;
	background: #ffffff;
	box-shadow: 1px 1px 1px #bebebe;
	
}

.cp-list img{
	width: 93px;
	height: 93px;
	display: block;
	float: left;
}

。cp-list li p {
	font-size: 10px;
}



