/**
*订单号
*/

.order-no
		width 100%
		height 30px
		border 1px solid $borderColor
		margin 0 auto
		background white
		color $textColor
		margin-top 10px
		font-size 13px
		.order-nu
			line-height 30px
			float left
			margin-left 15px
		.order-status
			line-height 30px
			float right	
			margin-right 15px

/**
*商品流程
**/
.order-process
		background white
		margin-top 10px
		width 100%
		margin 0 auto
		margin-top 10px
		border 1px solid $borderColor
		border-radius 3px
		.item
			//border-bottom 1px solid $borderColor
			height 60px
			.item-pic
				margin-left 15px
				margin-top 15px
				width 22px
				height 22px
				background red
				float left
				background url('../i/u148.png')
				background-size 22px 22px
			.item-pic-2
				background url('../i/u42.png')
				background-size 22px 22px
			.item-content
				float left
				margin-left 15px
				margin-top 5px
				p
					line-height 20px
					color $textColor
				.bold-text
					color $blackColor
					font-weight bold
				:nth-child(1)
					margin-top 8px
/***
* 商品流程--end

*/
/***
***商品详情及下方按钮抽离
**/
.goethe
		width 100%
		background white
		margin-top 2px
		//box-shadow 0px 1px 1px 1px #bebebe;
		border 1px solid $borderColor
		font-size 13px
		//box-shadow 1px 1px 1px 1px $borderColor
		.title
			height 40px
			border-bottom 1px solid $borderColor
			width 100%
			font-size 14px
			span
				display block
				line-height 40px
			.title-left
				float left
				padding-left 15px
				font-size 17px
				position relative
				:after
					content ''
					background url('../i/right-gray.png')
					background-size 22px 22px
					height 22px
					width 22px
					color blue
					display inline-block
					margin-left 10px
					top 8px
					position absolute
			.title-right
				float right
				padding-right 15px
				color #0099FF
		.goethe-content
			margin-top 15px
			padding-left 15px
			padding-bottom 15px
			border-bottom 1px solid $borderColor
			.pic
				width 92px
				height 80px
				float left
				img
					width 100%
					height 100%
			.desc
				float left
				padding-left 10px
				color $textColor
				line-height 16px
				p
					padding-top 5px
				:nth-child(1)
					color $blackColor
					padding-top 0
				.sum
					span
						font-size 16px
						font-family 'Arial-BoldMT','Arial Bold', 'Arial'
						font-weight bold
						color #333333
	.buy
			width 100%
			height 50px
			border-top 1px solid $boderColor
			line-height 50px
			p
				float left
				margin-left 15px
				font-family 'ArialMT', 'Arial'
			    color #999999
			a
				display block
				float right
				font-size 14px
				height 30px
				width 87px
				margin-top 10px
				background #27ce62
				border 0
				border-radius 2px
				margin-right 15px
				text-align center
				span
					color white
					font-weight bold
					line-height 30px
					
/***
***商品详情及下方按钮抽离--end
**/