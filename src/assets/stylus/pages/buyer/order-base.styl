.goethe
		width 100%
		background white
		margin-top 2px
		//box-shadow 0px 1px 1px 1px #bebebe;
		border 1px solid $borderColor
		font-size 13px
		//box-shadow 1px 1px 1px 1px $borderColor
		.title
			height 40px
			border-bottom 1px solid $borderColor
			width 100%
			font-size 14px
			span
				display block
				line-height 40px
			.title-left
				float left
				padding-left 15px
				font-size 17px
			.title-right
				float right
				padding-right 15px
				color #0099FF
		.goethe-content
			margin-top 15px
			padding-left 15px
			padding-bottom 15px
			border-bottom 1px solid $borderColor
			.pic
				width 92px
				height 80px
				float left
				img
					width 100%
					height 100%
			.desc
				float left
				padding-left 10px
				color $textColor
				line-height 15px
				p
					padding-top 5px
				:nth-child(1)
					color $blackColor
					padding-top 0