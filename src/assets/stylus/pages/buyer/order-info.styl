body
	box-sizing:border-box;
	-moz-box-sizing:border-box; /* Firefox */
	-webkit-box-sizing:border-box; /* Safari */
	background: $backgroundColor;
.default-text-color
	color $textColor!important
	font-weight normal!important
.order-info-content
	margin-top 12px
	height 100%
	// max-width 750px
	// min-width 300px
	padding 0 10px
	font-size 13px
	margin 0 auto
	color $textColor
	
	.reciver-info
		width 100%
		background white
		border 1px solid $borderColor
		margin-top 5px
		margin-bottom 10px
		.title
			height 40px
			font-size 17px
			line-height 40px
			padding-left 15px
			border-bottom 1px solid $borderColor
		.content
			color $textColor
			padding-left 25px
			margin-top 10px
			line-height 20px
			padding-bottom 10px
			border-bottom 1px solid $borderColor
		.logistical-title
			height 40px
			font-size 17px
			line-height 40px
			padding-left 15px
			border-bottom 1px solid $borderColor
		.logistical-content
			color $textColor
			padding-left 25px
			margin-top 10px
			line-height 20px
			padding-bottom 15px
			
			
			
		