body
	box-sizing:border-box;
	-moz-box-sizing:border-box; /* Firefox */
	-webkit-box-sizing:border-box; /* Safari */
	background: $backgroundColor;
.default-text-color
	color $textColor!important
	font-weight normal!important
.order-done-content
	margin-top 12px
	max-width 640px
	min-width 300px
	padding 0 10px
	font-size 8px
	.order-no
		width 100%
		height 24px
		border 1px solid $borderColor
		margin 0 auto
		background white
		color $textColor
		margin-top 10px
		p:nth-child(1)
			line-height 24px
			float left
			margin-left 10px
		p:nth-child(2)
			line-height 24px
			float right	
			margin-right 10px
	.order-process
		background white
		margin-top 10px
		width 100%
		margin 0 auto
		margin-top 10px
		border 1px solid $borderColor
		border-radius 3px
		.item
			border-bottom 1px solid $borderColor
			height 50px
			.item-pic
				margin-left 5px
				margin-top 16px
				width 16px
				height 16px
				background red
				float left
			.item-content
				float left
				margin-left 10px
				p
					color $textColor
					
				.bold-text
					color $blackColor
					font-weight bold
				:nth-child(1)
					margin-top 8px
	.goethe
		width 100%
		height 123px
		background white
		margin-top 2px
		//box-shadow 0px 1px 1px 1px #bebebe;
		border 1px solid $borderColor
		.title
			height 34px
			border-bottom 1px solid $borderColor
			width 100%
			span
				display block
				line-height 34px
			:nth-child(1)
				float left
				padding-left 10px
			:nth-child(2)
				float right
				padding-right 10px
				
					
		