body
	box-sizing:border-box;
	-moz-box-sizing:border-box; /* Firefox */
	-webkit-box-sizing:border-box; /* Safari */
	background: $backgroundColor;
.default-text-color
	color $textColor!important
	font-weight normal!important
.order-done-content
	margin-top 12px
	max-width 640px
	min-width 300px
	padding 0 10px
	font-size 13px
	.order-no
		width 100%
		height 30px
		border 1px solid $borderColor
		margin 0 auto
		background white
		color $textColor
		margin-top 10px
		font-size 13px
		p:nth-child(1)
			line-height 30px
			float left
			margin-left 15px
		p:nth-child(2)
			line-height 30px
			float right	
			margin-right 15px
	.order-process
		background white
		margin-top 10px
		width 100%
		margin 0 auto
		margin-top 10px
		border 1px solid $borderColor
		border-radius 3px
		.item
			border-bottom 1px solid $borderColor
			height 60px
			.item-pic
				margin-left 15px
				margin-top 15px
				width 22px
				height 22px
				background red
				float left
				background url('../i/u148.png')
				background-size 22px 22px
			.item-pic-2
				background url('../i/u42.png')
				background-size 22px 22px
			.item-content
				float left
				margin-left 15px
				margin-top 5px
				p
					line-height 20px
					color $textColor
				.bold-text
					color $blackColor
					font-weight bold
				:nth-child(1)
					margin-top 8px
	.goethe
		width 100%
		background white
		margin-top 2px
		//box-shadow 0px 1px 1px 1px #bebebe;
		border 1px solid $borderColor
		font-size 13px
		.title
			height 40px
			border-bottom 1px solid $borderColor
			width 100%
			font-size 14px
			span
				display block
				line-height 40px
			:nth-child(1)
				float left
				padding-left 15px
			:nth-child(2)
				float right
				padding-right 15px
		.goethe-content
			margin-top 15px
			padding-left 15px
			padding-bottom 15px
			border-bottom 1px solid $borderColor
			
			.pic
				width 92px
				height 80px
				float left
				img
					width 100%
					height 100%
			.desc
				float left
				padding-left 10px
				color $textColor
				line-height 15px
				p
					padding-top 5px
				:nth-child(1)
					color $blackColor
					padding-top 0
		.buy
			width 100%
			height 40px
			border-top 1px solid $boderColor
			line-height 40px
			p
				float left
				margin-left 15px
			button
				display block
				float right
				font-size 16px
				height 30px
				margin-top 5px
				background #27ce62
				border 0
				margin-right 15px
			
				
					
		