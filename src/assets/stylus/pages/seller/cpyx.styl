.collection-detail
	div.imgs
		padding 10px
		position: relative
		&:after
			display block
			content ''
			clear: both
		img
			display: inline-block
			width 30%
			margin-right 10px
			float left
		div.addImage
			position relative
			span
				position: absolute
				font-size: 30px
				top 35px
				right: 17%
	.links-group
		margin-top: 10px;
		a
			display: block;
			padding: 0 10px;
			background-color: white;
			line-height: 40px;
			color $blackColor
			border-top: 1px solid $borderColor;
			position relative
			span
				color red
				font-size 14px
				margin-right 10px
			i
				position: absolute
				right 0
				top 4px
			input
				line-height 40px
				width 300px
			&.input
				input
					line-height 30px
					width 300px
					float right
				&:last-child
					content ''
					display block
					clear both
	
	textarea
		margin-top 10px
		width 100%
		font-size 16px
		padding 10px
	div.btn-wrapper
		margin 30px 0
		padding 0 10px
