.buyer-order-manage
	nav
		margin-top 5px
		display flex
		padding 0 10px
		background-color #fff
		border-top 1px solid $borderColor
		border-bottom 1px solid $borderColor
		a
			flex 1
			line-height 40px
			text-align center
			color $hintTextColor
			font-size $defaultFz
			&.active
				border-bottom 3px solid $blackColor
				color $blackColor
		
	.items
		padding 10px
		.goethe
			margin 0
			margin-bottom 10px
			.buy a
				line-height 30px
				&.disabled
					background $disabledColor
				