@import './_varaibles.styl'

html,body,ul,li,p
	margin 0

body
	background-color: $backgroundColor;

a
	text-decoration: none;

header
	height 50px
	line-height: 50px;
	text-align: center;
	font-size: $lgFz;
	border-bottom: 1px solid $borderColor;
	background-color white

footer
	display flex
	position: fixed;
	bottom: 0;
	width: 100%;
	border-top: 1px solid $borderColor;
	background-color white
	a
		flex 1
		text-align: center;
		line-height: 50px;
		color $hintTextColor
		&.active
			color $blackColor
