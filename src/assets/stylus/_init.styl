@import './_varaibles.styl'

html,body,ul,li,p,textarea
	margin 0
	padding 0
	border 0

body
	background-color: $backgroundColor;

a
	text-decoration: none;
	color $textColor

header
	height 50px
	line-height: 50px;
	text-align: center;
	font-size: $lgFz;
	border-bottom: 1px solid $borderColor;
	background-color white
	>span
		width 20px
		height 20px
		&.right
			float: right
			margin-right 10px
			margin-top 5px
			position: relative
			&.notice
				img
					width 100%
				span
					position: absolute
					top 5px
					font-size 8px
					background red
					height 12px
					width: 12px
					line-height: 12px
					font-size: 8px
					border-radius: 6px
					color white
					font-weight: bold
footer
	display flex
	position: fixed;
	bottom: 0;
	width: 100%;
	border-top: 1px solid $borderColor;
	background-color white
	a
		flex 1
		text-align: center;
		line-height: 50px;
		color $hintTextColor
		&.active
			color $blackColor

.clearfix::before,
.clearfix::after
{
    content:'';
    height:0;
    line-height:0;
    display: block;
    visibility: hidden;
    clear: both;
}
.text-color
	color $textColor!important
	
.mt15
	margin-top 15px!important
